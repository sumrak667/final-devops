pipeline {
    agent any

    environment {
        GIT_CREDENTIALS = 'github-creds'
        DOCKER_CREDENTIALS = 'docker-creds'
        DOCKER_REGISTRY = 'docker.io'
        IMAGE_NAME = 'sumrak667/my-app'
    }

    options {
        skipDefaultCheckout() // Не делать автоматический checkout
        timestamps()          // Время в логах
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/sumrak667/final-devops.git', credentialsId: "${GIT_CREDENTIALS}"
            }
        }

        stage('Build') {
            steps {
                sh './gradlew clean build'
            }
        }

        stage('Test') {
            steps {
                sh './gradlew test'
            }
        }

        stage('Static Code Analysis') {
            steps {
                sh './gradlew check'
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    def imageTag = "${env.BUILD_NUMBER}"
                    docker.withRegistry("https://${DOCKER_REGISTRY}", "${DOCKER_CREDENTIALS}") {
                        def appImage = docker.build("${IMAGE_NAME}:${imageTag}")
                        appImage.push()
                    }
                }
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                echo 'Deploying application...'
            }
        }
    }

    post {
        success {
            archiveArtifacts artifacts: 'build/libs/**/*.jar', allowEmptyArchive: true
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed!'
        }
        always {
            cleanWs()
        }
    }
}

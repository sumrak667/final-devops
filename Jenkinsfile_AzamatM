pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = 'docker-hub-cred-id' // твой Docker Hub ID в Jenkins
        IMAGE_NAME = 'summmrak/my-appfinal'
        APP_DIR = 'app' // директория с gradlew
    }

    options {
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: 'main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/sumrak667/final-devops.git',
                        credentialsId: 'github-cred-id'
                    ]]
                ])
            }
        }

        stage('Build') {
            steps {
                dir("${APP_DIR}") {
                    sh 'chmod +x gradlew'
                    sh './gradlew clean build'
                }
            }
        }

        stage('Test') {
            steps {
                dir("${APP_DIR}") {
                    sh './gradlew test'
                }
            }
            post {
                always {
                    junit "${APP_DIR}/build/test-results/test/*.xml"
                }
            }
        }

        stage('Static Code Analysis') {
            steps {
                dir("${APP_DIR}") {
                    sh './gradlew check'
                }
            }
        }

        stage('Docker Build & Push') {
            when {
                branch 'main'
            }
            steps {
                script {
                    def imageTag = "${IMAGE_NAME}:${env.BUILD_NUMBER}"
                    docker.withRegistry('https://docker.io', "${DOCKER_HUB_CREDENTIALS}") {
                        sh "docker build -t ${imageTag} -f Dockerfile_AzamatM ."
                        sh "docker push ${imageTag}"
                    }
                }
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                echo "Deployment stage: run deployment scripts here"
                // Можно добавить kubectl, ssh или docker run команды
            }
        }
    }

    post {
        success {
            archiveArtifacts artifacts: "${APP_DIR}/build/libs/*.jar", allowEmptyArchive: true
            echo "Build and Docker push succeeded!"
        }
        failure {
            echo "Build failed!"
        }
    }
}

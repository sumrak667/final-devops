pipeline {
    agent any

    environment {
        IMAGE_NAME = "summmrak/my-appfinal"
        IMAGE_TAG = "latest"
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/sumrak667/final-devops.git', credentialsId: 'github-cred-id'
            }
        }

        stage('Build') {
            steps {
                dir('app') {
                    sh 'chmod +x gradlew'
                    sh './gradlew clean build'
                }
            }
        }

        stage('Test') {
            steps {
                dir('app') {
                    sh './gradlew test'
                }
            }
        }

        stage('Static Code Analysis') {
            steps {
                dir('app') {
                    sh './gradlew check'
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-hub-cred-id') {
                        def appImage = docker.build("${IMAGE_NAME}:${IMAGE_TAG}", "-f Dockerfile_AzamatM .")
                        appImage.push()
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo "Build and Docker push succeeded!"
        }
        failure {
            echo "Build failed!"
        }
    }
}
